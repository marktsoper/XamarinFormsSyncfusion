<?xml version="1.0" encoding="utf-8" ?>
<local:SamplePage
              xmlns:local="clr-namespace:SampleBrowser;assembly=SampleBrowser"
              xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="SampleBrowser.GettingStartedPDF">

  <local:SamplePage.ContentView>
    <StackLayout>
      <Label x:Name="SampleTitle"  Text="Getting started"            
             FontSize="Large"
             HorizontalOptions="Center"
             VerticalOptions="Center">
      </Label>
      <Label></Label>
      <Label x:Name="Description" Text="Drawing text in a PDF document has been made simpler.Now, it is very similar to drawing in .NET GDI. This section demonstrates how a string is drawn in a PDF page using Essential PDF. The string is created using the DrawString method of the Graphics class.Be sure to specify the font and brush with which you want the string to be drawn."
             FontSize="Medium"
             HorizontalOptions="Center"
             VerticalOptions="Center">
      </Label>
      <Label></Label>
      <Button x:Name="btnGenerate"  Text="Generate PDF"   
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="OnButtonClicked" />
      </StackLayout>
  </local:SamplePage.ContentView>

  <local:SamplePage.PropertyView>

  </local:SamplePage.PropertyView>
</local:SamplePage>