<?xml version="1.0" encoding="utf-8" ?>
<local:SamplePage
             xmlns:local="clr-namespace:SampleBrowser;assembly=SampleBrowser"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.SlidesPresentation">


  <local:SamplePage.ContentView>
    <StackLayout>

      <Label  x:Name="SampleTitle" Text = "Slides"
            FontSize="Large"
              HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand">
      </Label>
      <Label></Label>
      <Label x:Name="Description" Text="Presentation library provides support for creating slides with predefined layouts equivalent to Microsoft PowerPoint. This sample demonstrates how to create and add contents into the slide."
                 FontSize="Medium" VerticalOptions="CenterAndExpand">
      </Label>
      <Label></Label>
      <Label x:Name="Content_2" Text="Please click the Generate Presentation button to save and view the generated PowerPoint Presentation."
                 FontSize="Medium" VerticalOptions="CenterAndExpand">
      </Label>
      <Label></Label>
      <Button x:Name="btnGenerate" Clicked ="OnButtonClicked" Text ="Generate Presentation" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"></Button>
    </StackLayout>
  </local:SamplePage.ContentView>
  <local:SamplePage.PropertyView>

  </local:SamplePage.PropertyView>

</local:SamplePage>
