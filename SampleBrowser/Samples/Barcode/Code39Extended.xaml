<?xml version="1.0" encoding="utf-8" ?>
<local:SamplePage
  xmlns:barcode="clr-namespace:Syncfusion.SfBarcode.XForms;assembly=Syncfusion.SfBarcode.XForms"
              xmlns:local="clr-namespace:SampleBrowser;assembly=SampleBrowser"
  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Code39Extended"  Padding="8">
    <local:SamplePage.ContentView>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.05*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Text="Allowed Characters" Grid.Row="0" FontAttributes="Bold" FontSize="15" />

            <Label Text="All 128 ASCII Characters" Grid.Row="1" />

            <barcode:SfBarcode x:Name="barcode" BackgroundColor="Gray" Text="G71C0453" Grid.Row="2" Symbology="Code39Extended">
      <!--<barcode:SfBarcode.SymbologySettings>
        <barcode:QRBarcodeSettings XDimension="10"/>
      </barcode:SfBarcode.SymbologySettings>-->
    </barcode:SfBarcode>
    </Grid>
  </local:SamplePage.ContentView>
  
</local:SamplePage>