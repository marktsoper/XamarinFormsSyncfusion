<?xml version="1.0" encoding="utf-8" ?>
<local:SamplePage
             xmlns:schedule="clr-namespace:Syncfusion.SfSchedule.XForms;assembly=Syncfusion.SfSchedule.XForms"
              xmlns:local="clr-namespace:SampleBrowser;assembly=SampleBrowser"
              xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="SampleBrowser.Recurrence">
  <local:SamplePage.ContentView>
     <Grid x:Name="grid_layout">
      
    <schedule:SfSchedule x:Name="Schedule"
      HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
     ScheduleView="MonthView" ShowAppointmentsInline="True"  DataSource="{Binding RecurssiveAppointmentCollection}" >
      <schedule:SfSchedule.BindingContext>
        <local:RecurrenceViewModel />
      </schedule:SfSchedule.BindingContext>
    </schedule:SfSchedule>

    </Grid>
  </local:SamplePage.ContentView>
  <local:SamplePage.Padding>
    <OnPlatform x:TypeArguments="Thickness">
      <OnPlatform.iOS>
        0, 0, 0, 90
      </OnPlatform.iOS>
      <OnPlatform.Android>
        -10, -10, -10, -20
      </OnPlatform.Android>
      <OnPlatform.WinPhone>
        -10, -10, -10, -20
      </OnPlatform.WinPhone>
    </OnPlatform>
  </local:SamplePage.Padding>
</local:SamplePage>