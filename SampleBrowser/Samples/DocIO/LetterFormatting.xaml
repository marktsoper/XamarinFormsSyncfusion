<?xml version="1.0" encoding="utf-8" ?>
<local:SamplePage
             xmlns:local="clr-namespace:SampleBrowser;assembly=SampleBrowser"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.LetterFormatting">

  <local:SamplePage.ContentView>
    <StackLayout>
      <Label  x:Name="SampleTitle" Text = "Letter Formatting"
              FontSize="Large"
              HorizontalOptions="Center"
              VerticalOptions="CenterAndExpand">
      </Label>

      <Label></Label>

      <Label x:Name="Content_1" Text="This sample demonstrates how to create a letter using Mail merge functionality with business objects."
                  FontSize="Medium" VerticalOptions="CenterAndExpand">
      </Label>
      
      <Label></Label>

      <Label x:Name="Description" Text="The Mail merge function allows you to fill the Mail merge fields in the template document with data from the data source." FontSize="Medium" VerticalOptions="CenterAndExpand">
      </Label>

      <Label></Label>

      <Label x:Name="Content_2" Text="Please click the Generate button to save and view the Word document generated by Essential DocIO."
                 FontSize="Medium" VerticalOptions="CenterAndExpand">
      </Label>

      <Label></Label>

      <Button x:Name="btnGenerate" Clicked ="OnButtonClicked" Text ="Generate" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"></Button>
    </StackLayout>
  </local:SamplePage.ContentView>
  <local:SamplePage.PropertyView>
    
  </local:SamplePage.PropertyView>

</local:SamplePage>