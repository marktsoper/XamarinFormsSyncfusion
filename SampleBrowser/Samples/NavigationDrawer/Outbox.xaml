<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SampleBrowser.Outbox">
	<ContentView.Content>
	<StackLayout Orientation="Vertical" x:Name="mainContentView"  BackgroundColor="White">

