			<Label HeightRequest="25" WidthRequest="200" Text="Ruben" FontSize="18"/>
			<Label HeightRequest="15" WidthRequest="200" Text="Hi Ruben, See you at 9PM" FontSize="12"/>
		</StackLayout>
    

		<BoxView HeightRequest="0.5" BackgroundColor="Silver"/>

    <StackLayout Orientation="Vertical">
