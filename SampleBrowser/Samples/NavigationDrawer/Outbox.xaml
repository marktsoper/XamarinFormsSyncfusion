      <Label HeightRequest="25" HorizontalTextAlignment="Start"  Text="Caster" FontSize="18"/>
      <Label HeightRequest="15"  Text="Hi Caster, See you at 1PM" FontSize="12"/>
    </StackLayout>

    <BoxView HeightRequest="0.5" BackgroundColor="Silver"/>

		<StackLayout Orientation="Vertical">
			<Label HeightRequest="25"  Text="Rodriguez" FontSize="18"/>
			<Label HeightRequest="15"  Text="Hi Rodriguez, See you at 7PM" FontSize="12"/>
		</StackLayout>

		<BoxView HeightRequest="0.5" BackgroundColor="Silver"/>

		<StackLayout Orientation="Vertical">
			<Label HeightRequest="25" HorizontalTextAlignment="Start"  Text="Joey" FontSize="18"/>
