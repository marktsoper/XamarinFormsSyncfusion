<local:SamplePage
 xmlns="http://xamarin.com/schemas/2014/forms" xmlns:local="clr-namespace:SampleBrowser;assembly=SampleBrowser" xmlns:navigation="clr-namespace:Syncfusion.SfNavigationDrawer.XForms;assembly=Syncfusion.SfNavigationDrawer.XForms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SampleBrowser.NavigationDrawer_Tablet">

<local:SamplePage.ContentView>
  <navigation:SfNavigationDrawer BackgroundColor="White" x:Name="navigationDrawer" />
</local:SamplePage.ContentView>

<local:SamplePage.PropertyView>
	<StackLayout x:Name="optionLayout" Orientation="Vertical" Spacing="10">

   <StackLayout Orientation="Vertical">
   <Label  Text="Transition Type" FontSize="18" HeightRequest="40"  WidthRequest ="150" HorizontalOptions="Start" VerticalOptions="StartAndExpand" />
   <local:PickerExt x:Name="transitionPicker" VerticalOptions="Center" HorizontalOptions="FillAndExpand"  HeightRequest="40"/>
   </StackLayout>
    <StackLayout HeightRequest="20"/>
    <StackLayout Orientation="Vertical">
   <Label  Text="Position" FontSize="18" HeightRequest="40"  WidthRequest ="150" HorizontalOptions="Start" VerticalOptions="StartAndExpand" />
   <local:PickerExt x:Name="positionPicker" VerticalOptions="Center" HorizontalOptions="FillAndExpand"  HeightRequest="40"/>
   </StackLayout>

   </StackLayout>
</local:SamplePage.PropertyView>

</local:SamplePage>